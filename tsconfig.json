{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "rootDir": "./",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
        "*": [
                "node_modules/*"
            ]
        }
    },
        "include": [
            "src/*.ts"
        ],
        "exclude": [
            "node_modules"
        ]
    }